{% extends 'base.html.twig' %}

{% block title %}listes des information personnelles{% endblock %}


{% block body %}
<a href="{{ path('app_compte') }}" class="btn btn-outline-success mb-4">
  &larr; Retour
</a>


    <div class="container-fluid mt-5 mb-5">
        <div class="row justify-content-center text-center">

        <p class="lead">Voici les informations de votre compte</p>

            <div class="col-md-12">
                <h2>Informations personnelles</h2>  
            {% for compte in monCompte %}

                    <p>{{ compte.nom }} {{ compte.prenom }}</p>
                    <p>{{ compte.email }}</p>
                    <p>{{ compte.telephone }}</p>
                    <p>{{ compte.adresse }}</p>
                    <p>{{ compte.pseudo }}</p>
                     {% if compte.photo %}
                    <p><strong>Crédit disponible :</strong> {{ compte.credit }} jeton</p>
                     <p><strong>Photo de profil :</strong></p>
                  <img src="{{ asset('uploads/photos/' ~ compte.photo) }}" alt="Photo de profil" class="img-thumbnail" width="150">
                   {% else %}
                  <p><strong>Photo de profil :</strong> Non renseignée</p>
                   {% endif %}
                    <p><a href="{{ path('app_mon_compte_information_compteinformation') }}">Modifier les informations</a></p>
                    
                  {% endfor %}
        </div>
    </div>
    </div>

{% endblock %}
