{# templates/avis/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Avis{% endblock %}

{% block body %}
{# --- Affichage des messages flash --- #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

    <div class="container mt-4">

    <h1>Liste des Avis</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Auteur</th>
                <th>Statut</th>
                <th>Actions</th>

                {# ajoute un nouveau commentaire#}
            </tr>
        </thead>
        <tbody>
        {% for avis in avis %}
            <tr>
                <td>{{ avis.commentaire }}</td>
                <td>{{ avis.note }}</td>
                <td>{{ avis.auteur }}</td>
                <td>{{ avis.statut }}</td>
                <td>
                    <a href="{{ path('app_avis_edit', {'id': avis.id}) }}" class="btn btn-primary">Éditer</a>
                    <form method="post" action="{{ path('app_avis_delete', {'id': avis.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avis.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun avis trouvé</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
        </div>
            <div><a href="{{ path('app_accueil') }}" class="btn btn-primary">Retour à l'accueil</a></div>
{% endblock %}
