{% extends 'base.html.twig' %}

{% block title %}Covoiturage{% endblock %}

{% block body %}

{# --- Affichage des messages flash --- #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<div class="container-fluid bg-light p-0 rounded shadow-fluid mt-4 gx-0">

    {# --- Bandeau mode actuel --- #}
    <section>
        <div class="alert alert-info text-center mt-3 mb-4 p-2 fw-bold">
            <strong>Mode actuel : </strong>
            {% if mode == 'passager' %}
                passagerüßë‚Äçü§ù‚Äçüßë
            {% else %}
                conducteurüöó
            {% endif %}
        </div>

        <div class="form-check form-switch mt-4 d-flex justify-content-end align-items-center mb-4 p-0">
            <input class="form-check-input" type="checkbox" id="modeSwitch" {% if mode == 'conducteur' %}checked{% endif %}>
            <label class="form-check-label text-primary ms-2" for="modeSwitch">
                Changer en mode {{ mode == 'passager' ? 'Conducteur üöó' : 'Passager üßç' }}
            </label>
        </div>

        <div class="text-center mb-3">
            <h1 class="fs-1 btn btn-primary border-2">
                <strong>{{ mode == 'passager' ? 'Passager' : 'Conducteur' }}</strong>
            </h1>
        </div>
    </section>

    {# --- BARRE DE RECHERCHE pour passager uniquement --- #}
    {% if mode == 'passager' %}
    <section class="mt-4 mb-4 p-3 bg-white rounded shadow-sm">
        <form class="row g-2" role="search" method="GET" action="{{ path('app_covoiturage') }}">
            <div class="col-12 col-md-3">
                <input class="form-control" name="depart" type="search" placeholder="‚≠ï Lieu de D√©part" value="{{ filters.depart|default('') }}">
            </div>
            <div class="col-12 col-md-3">
                <input class="form-control" name="arrivee" type="search" placeholder="‚≠ï Lieu d'Arriv√©e" value="{{ filters.arrivee|default('') }}">
            </div>
            <div class="col-12 col-md-2">
                <input class="form-control" name="date_depart" type="date" value="{{ filters.date ? filters.date|date('Y-m-d') : '' }}">
            </div>
            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
        </form>
    </section>
    {% endif %}

    {# --- LISTE DES COVOITURAGES --- #}
    {% if covoiturages is empty %}
        <div class="alert alert-info text-center mt-4">
            {% if mode == 'passager' %}
                Aucun covoiturage disponible pour vos crit√®res de recherche.
            {% else %}
                <a href="{{ path('app_mes_reservations') }}" class="btn btn-primary">
                    veuillez cliquer ici pour d√©marrer ta course ->‚ñ∂Ô∏è
                </a>
            {% endif %}
        </div>
    {% else %}
        <div class="row g-3 mt-4 mb-5">
            {% for covoiturage in covoiturages %}
                <div class="col-12 fade-in">
                    <div class="card shadow-sm h-100 border-0 hover-card">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title mb-2">
                                {{ covoiturage.lieudepart }} ‚Üí {{ covoiturage.lieuarrivee }}
                            </h5>

                            <ul class="list-unstyled mb-3 flex-grow-1">
                                <li><strong>Date :</strong> {{ covoiturage.datedepart|date('d/m/Y') }}</li>
                                <li><strong>Heure :</strong> {{ covoiturage.heuredepart|date('H:i') }}</li>
                                <li><strong>Places :</strong> {{ covoiturage.nbplace }}</li>
                                <li><strong>Prix :</strong> {{ covoiturage.prixpersonne }} ‚Ç¨</li>
                                <li><strong>V√©hicule :</strong> {{ covoiturage.voiture.marque }} {{ covoiturage.voiture.modele }} ({{ covoiturage.voiture.immatriculation }})</li>
                                <li><strong>√ânergie :</strong> {{ covoiturage.voiture.energie ?? 'non renseign√©e' }}</li>
                                <li><strong>pseudo Conducteur :</strong> {{ covoiturage.user.pseudo }}</li>
                                <li><strong>Statut :</strong>
                                    {% if covoiturage.statut == 'Disponible' %}
                                        <span class="badge bg-success">{{ covoiturage.statut }}</span>
                                    {% elseif covoiturage.statut == 'En cours' %}
                                        <span class="badge bg-warning text-dark">{{ covoiturage.statut }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ covoiturage.statut }}</span>
                                    {% endif %}
                                </li>
                            </ul>

                            {# --- Boutons selon le mode --- #}
                            {% if mode == 'passager' %}
                                <a href="{{ path('app_covoiturage_information', {'id': covoiturage.id}) }}"
                                   class="btn btn-primary w-100 mt-auto">
                                   Voir / R√©server
                                </a>
                            {% else %}
                                {# Mode conducteur ‚Üí passagers et boutons d√©marrage #}
                                {% if covoiturage.passagers|length > 0 %}
                                    <div class="mb-2">
                                        <strong>Passagers r√©serv√©s :</strong>
                                        <ul>
                                            {% for passager in covoiturage.passagers %}
                                                <li>{{ passager.pseudo }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% else %}
                                    <div class="mb-2 text-muted"><em>Aucun passager r√©serv√©</em></div>
                                {% endif %}

                                <div class="d-flex justify-content-between mt-auto">
                                    {% if covoiturage.statut == 'Disponible' %}
                                        <a href="{{ path('app_covoiturage_demarrer_course', {'id': covoiturage.id}) }}"
                                           class="btn btn-success btn-sm w-100 me-2">
                                           üöó D√©marrer
                                        </a>
                                    {% elseif covoiturage.statut == 'En cours' %}
                                        <a href="{{ path('app_covoiturage_arreter_course', {'id': covoiturage.id}) }}"
                                           class="btn btn-warning btn-sm w-100 me-2">
                                           üõë Terminer
                                        </a>
                                    {% else %}
                                        <span class="badge bg-secondary w-100 text-center">Trajet termin√©</span>
                                    {% endif %}
                                </div>
                            {% endif %}

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const switchInput = document.getElementById('modeSwitch');
    if (switchInput) {
        switchInput.addEventListener('change', function() {
            window.location.href = "{{ path('app_covoiturage_switch_role') }}";
        });
    }

    const fadeElements = document.querySelectorAll('.fade-in');
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));
});
</script>

<style>
.fade-in { opacity: 0; transform: translateY(30px); transition: opacity 0.6s ease, transform 0.6s ease; }
.fade-in.visible { opacity: 1; transform: translateY(0); }
.hover-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
.hover-card:hover { transform: translateY(-5px) scale(1.02); box-shadow: 0 8px 18px rgba(0,0,0,0.15); }
.card, .card-body { border-radius: 1rem; }
.btn-primary:active { transform: scale(0.97); transition: transform 0.1s; }
</style>

{% endblock %}
