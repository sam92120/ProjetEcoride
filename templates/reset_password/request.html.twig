{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe {% endblock %}

{% block body %}
   <div class="container">
        <div class="row justify-content-center">
        <div class="col-md-6 text-center bg-success p-5 rounded shadow">
         {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.Email) }}
        <div>
            <p>
                Entrez votre adresse e-mail pour recevoir un lien de réinitialisation de mot de passe
            </p>
        </div>

        <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
        </div>
    </div>
    </div>

     

{% endblock %}
